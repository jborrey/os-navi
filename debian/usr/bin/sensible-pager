-rwxr-xr-x 1 root root 288 Jun 6 2013 usr/bin/sensible-pager

#!/bin/sh

${PAGER:-pager} "$@"
ret="$?"
if [ "$ret" -eq 126 ] || [ "$ret" -eq 127 ]; then
more "$@"
ret="$?"
	if [ "$ret" -eq 126 ] || [ "$ret" -eq 127 ]; then
		echo "Couldn't find a pager!" 1>&2
		echo "Set the \$PAGER environment variable to your desired pager." 1>&2
		exit 1
	fi
fi
